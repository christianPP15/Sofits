<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.sofits_frontend">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".common.MyApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/networksecurityconfig"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Sofitsfrontend">
        <activity android:name=".ui.Libros.detallePublicacion.PublicacionDetalleActivity"></activity>
        <activity android:name=".ui.Libros.detallePublicacion.DetailPublicacionActivity" />
        <activity
            android:name=".ui.Libros.PublicacionesActivity"
            android:label="@string/title_activity_publicaciones"
            android:theme="@style/Theme.Sofitsfrontend.NoActionBar" />
        <activity android:name=".ui.Libros.LibrosPublicadosActivity" />
        <activity
            android:name=".ui.MiPerfil.pepe.MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/Theme.Sofitsfrontend.NoActionBar"
            tools:ignore="MissingClass" />
        <activity android:name=".ui.MiPerfil.AddBook.SelectAutorNewBook" />
        <activity android:name=".ui.MiPerfil.AddBook.AddBookUser" />
        <activity
            android:name=".ui.Autores.AutoresDetail.AutorDetailActivity"
            android:label="@string/title_activity_autor_detail"
            android:theme="@style/Theme.Sofitsfrontend.NoActionBar" />
        <activity android:name=".ui.Registro.RegistroActivity" />
        <activity android:name=".ui.Login.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" />
    </application>

</manifest>